<script type="text/javascript">
	var trades_links = ["https://www.youtube.com/embed/8SnQVVPNw6w","https://www.youtube.com/embed/ZYZCmFunfbU","https://www.youtube.com/embed/eWb2M4Poqro","https://www.youtube.com/embed/BykjexAPL3Y","https://www.youtube.com/embed/CEC06t_6qqs","https://www.youtube.com/embed/H2ANspIXN00","https://www.youtube.com/embed/DorfXrf7aUI","https://www.youtube.com/embed/_dPQFCn_IA8","https://www.youtube.com/embed/mbq0U3PjLY4","https://www.youtube.com/embed/999kFh_ZWkw","https://www.youtube.com/embed/azJ1E3Oo9Do","https://www.youtube.com/embed/BVUqbXythNY","https://www.youtube.com/embed/-NmnkuDAS_0","https://www.youtube.com/embed/0IY88aic3Bw"];

	var migdep_links = ["https://www.youtube.com/embed/cBNJuUN9VDs&feature=youtu.be", "https://www.youtube.com/embed/PRxYDPmu6vg","https://www.youtube.com/embed/nbnCVh4mYjs","https://www.youtube.com/embed/zXtA9Ovw6pE","https://www.youtube.com/embed/8OfAEtrRPkU","https://www.youtube.com/embed/Y65R-gVjssU","https://www.youtube.com/embed/IC9dvyPw1Tw","https://www.youtube.com/embed/J47gczx5KCM", "https://www.youtube.com/embed/GEJGloH3EfA","https://www.youtube.com/embed/NEcTi96eZc0","https://www.youtube.com/embed/L2PBpXSyfPs","https://www.youtube.com/embed/FFp6xJy7BJo","https://www.youtube.com/embed/RKmGaENEPTg","https://www.youtube.com/embed/Q5JO4BNTdgo","https://www.youtube.com/embed/xYgWAjJqbgs","https://www.youtube.com/embed/eJh2oXbG3gU","https://www.youtube.com/embed/Ru8Kg0wMoNg"];

	var sedes_links = ["https://www.youtube.com/embed/Hc1WbGcl7DE"];

	$.ajax({
		method: 'get',
		dataType: 'JSON',
		url: '<%= root_path %>',
		success: function(result){
			var ancho = Math.max(document.documentElement.clientWidth, window.innerWidth || document.body.ClientWidth || 0);
			scaleEvents(result["ev_big"],result["ev_med"],result["ev_small"]);
			drawSlider($("#trades-slider"),trades_links,"trades",3)
			renderSlider("trades",$("#trades-container"),$("#trades-cont"),$("#trades-vids"),trades_links,"trades-vid-cont","trades-slide-vid",(ancho < 792 ? 2 : 3),(ancho < 792 ? 0.4 : 0.3),false);
			drawSlider($("#migdep-slider"),migdep_links,"migdep",3)
			renderSlider("migdep",$("#migdep-container"),$("#migdep-cont"),$("#migdep-vids"),migdep_links,"migdep-vid-cont","migdep-slide-vid",(ancho < 792 ? 2 : 3),(ancho < 792 ? 0.4 : 0.3),false);
			drawSlider($("#sedes-slider"),sedes_links,"sedes",3)
			renderSlider("sedes",$("#sedes-container"),$("#sedes-cont"),$("#sedes-vids"),sedes_links,"sedes-vid-cont","sedes-slide-vid",(ancho < 792 ? 2 : 3),(ancho < 792 ? 0.4 : 0.3),false);
		}
	});

$(window).on("resize",function(){
			var ancho = Math.max(document.documentElement.clientWidth, window.innerWidth || document.body.ClientWidth || 0);
			renderSlider("trades",$("#trades-container"),$("#trades-cont"),$("#trades-vids"),trades_links,"trades-vid-cont","trades-slide-vid",(ancho >= 792 ? 3 : (ancho >= 545 ? 2 : 1)),(ancho >= 792 ? 0.3 : (ancho >= 545 ? 0.4 : 0.47)),true);
			renderSlider("migdep",$("#migdep-container"),$("#migdep-cont"),$("#migdep-vids"),migdep_links,"migdep-vid-cont","migdep-slide-vid",(ancho >= 792 ? 3 : (ancho >= 545 ? 2 : 1)),(ancho >= 792 ? 0.3 : (ancho >= 545 ? 0.4 : 0.47)),true);
			renderSlider("sedes",$("#sedes-container"),$("#sedes-cont"),$("#sedes-vids"),sedes_links,"sedes-vid-cont","sedes-slide-vid",(ancho >= 792 ? 3 : (ancho >= 545 ? 2 : 1)),(ancho >= 792 ? 0.3 : (ancho >= 545 ? 0.4 : 0.47)),true);
});
</script>
